<h1>Категории</h1>

<table border="3">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Наименование</th>
      <th>Адрес почты</th>
      <th>Тело письма</th>
      <th>Подпись</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.email %></td>
        <td><%= category.body_mail %></td>
        <td><%= category.body_mail_end %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

